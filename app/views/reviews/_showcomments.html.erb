
<h1>Friends</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">comment</th>
      <th scope="col">Friend name</th>
      <th scope="col">button</th> 

    </tr>
  </thead>
  <tbody>
    <% @friend.reviews.all.each do |review| %>
      <tr>
          <td> <%= review.rtext %></td>
          <td> <%= @friend.first_name %></td>
          <td><%= button_to "Destroy this comment", [@friend , review], method: :delete %></td>  

   <% end %>
  </tbody>
</table>